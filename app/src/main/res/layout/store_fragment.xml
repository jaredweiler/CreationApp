
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="co.crtn.www.creationapp.MainActivity$StoreFragment">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/gl1"
        android:columnCount="2"
        android:rowCount="4">




    <Button android:id="@+id/btnViewShirts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Shirts"
        android:layout_marginTop="0dip"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <Button android:id="@+id/btnViewHoodies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Hoodies"
        android:layout_marginTop="0dip"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewJackets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Jackets"
            android:layout_marginTop="0dip"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewSweaters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Sweaters"
            android:layout_marginTop="0dip"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewMisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Miscellaneous"
            android:layout_marginTop="0dip"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View CART"
            android:layout_marginTop="0dip"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewInvis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Miscellaneous"
            android:layout_marginTop="0dip"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".3"
            android:visibility="invisible"
            android:clickable="false"
            />
    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/shirtsgrid"
        android:columnCount="1"
        android:rowCount="2"
        android:visibility="invisible">

    <Button android:id="@+id/shirtsbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:clickable="false"
        android:layout_column="0"
        android:layout_row="0"
        />

    <ListView
        android:id="@+id/shirtslist1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"/>

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/jacketsgrid"
        android:columnCount="1"
        android:rowCount="2"
        android:visibility="invisible">

        <Button android:id="@+id/jacketsbackbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:clickable="false"
            android:layout_column="0"
            android:layout_row="0"
            />

        <ListView
            android:id="@+id/jacketslist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"/>

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/sweatersgrid"
        android:columnCount="1"
        android:rowCount="2"
        android:visibility="invisible">

        <Button android:id="@+id/sweatersbackbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:clickable="false"
            android:layout_column="0"
            android:layout_row="0"
            />

        <ListView
            android:id="@+id/sweaterslist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"/>

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/hoodiesgrid"
        android:columnCount="1"
        android:rowCount="2"
        android:visibility="invisible">

        <Button android:id="@+id/hoodiesbackbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:clickable="false"
            android:layout_column="0"
            android:layout_row="0"
            />

        <ListView
            android:id="@+id/hoodieslist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"/>

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/miscgrid"
    android:columnCount="1"
    android:rowCount="2"
    android:visibility="invisible">

    <Button android:id="@+id/miscbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:clickable="false"
        android:layout_column="0"
        android:layout_row="0"
        />

    <ListView
        android:id="@+id/misclist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"/>

</GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/allgrid"
        android:columnCount="1"
        android:rowCount="2"
        android:visibility="invisible">

        <Button android:id="@+id/allbackbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:clickable="false"
            android:layout_column="0"
            android:layout_row="0"
            />

        <ListView
            android:id="@+id/alllist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"/>

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/cartgrid"
        android:columnCount="1"
        android:rowCount="2"
        android:visibility="invisible">

        <Button android:id="@+id/cartbackbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:clickable="false"
            android:layout_column="0"
            android:layout_row="0"
            />

        <ListView
            android:id="@+id/cartlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"/>

    </GridLayout>

</RelativeLayout>

