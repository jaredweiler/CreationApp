
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="co.crtn.www.creationapp.MainActivity$StoreFragment">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="4">




    <Button android:id="@+id/btnViewShirts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Shirts"
        android:layout_marginTop="0dip"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <Button android:id="@+id/btnViewHoodies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Hoodies"
        android:layout_marginTop="0dip"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewJackets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Jackets"
            android:layout_marginTop="0dip"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewSweaters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Sweaters"
            android:layout_marginTop="0dip"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewMisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Miscellaneous"
            android:layout_marginTop="0dip"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All Products"
            android:layout_marginTop="0dip"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button android:id="@+id/btnViewInvis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Miscellaneous"
            android:layout_marginTop="0dip"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".3"
            android:visibility="invisible"
            android:clickable="false"
            />
    </GridLayout>

</RelativeLayout>

